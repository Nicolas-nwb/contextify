{
    "name": "contextify",
    "displayName": "Contextify Extractor for LLM",
    "description": "Extract selected files content into one text for LLM context",
    "version": "0.0.7",
    "icon": "assets/icon.png",
    "publisher": "nowwweb",
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "engines": {
        "vscode": "^1.80.0"
    },
    "activationEvents": [
        "onCommand:contextify.extract",
        "onCommand:contextify.reset"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "contextify.extract",
                "title": "Add to Context ðŸ“„âž•ðŸ“‹"
            },
            {
                "command": "contextify.reset",
                "title": "Reset Context ðŸ§¹ðŸ“‹"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "contextify.extract",
                    "group": "navigation"
                },
                {
                    "command": "contextify.reset",
                    "group": "navigation"
                }
            ],
            "editor/title/context": [
                {
                    "command": "contextify.extract",
                    "group": "navigation"
                },
                {
                    "command": "contextify.reset",
                    "group": "navigation"
                }
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Nicolas-nwb/contextify.git"
    }
}